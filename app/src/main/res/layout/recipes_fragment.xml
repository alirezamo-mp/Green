<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/fm_recipes_information"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_recipes_title"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">

            <ImageView
                android:id="@+id/img_basket_imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="45dp"
                android:layout_marginRight="32dp"
                android:src="@drawable/ic_icon_search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:text="Recipes"
                android:textColor="@color/medium_gray_dark"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@android:color/transparent"
                android:paddingHorizontal="4dp">

                <TextView
                    android:id="@+id/txt_recipes_all"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:text="All"
                    android:textColor="@color/medium_gray"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/rel_recipes_all"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:background="@android:color/transparent"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/basket_item_style"
                        android:paddingHorizontal="11dp"
                        android:paddingVertical="11dp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="All"
                            android:textColor="@color/whites"
                            android:textSize="16sp"
                            android:visibility="visible" />
                    </RelativeLayout>

                </RelativeLayout>


                <TextView
                    android:id="@+id/txt_recipes_vegan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:text="Vegan"
                    android:textColor="@color/medium_gray"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/rel_recipes_vegan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/basket_item_style"
                        android:paddingVertical="11dp">


                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingHorizontal="3dp"
                            android:text="Vegan"
                            android:textColor="@color/whites"
                            android:textSize="16sp" />
                    </RelativeLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_recipes_keto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:text="Keto"
                    android:textColor="@color/medium_gray"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/rel_recipes_keto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:visibility="gone">

                    <RelativeLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/basket_item_style"
                        android:paddingVertical="11dp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingHorizontal="5dp"
                            android:text="Keto"
                            android:textColor="@color/whites"
                            android:textSize="16sp"
                            android:visibility="visible" />
                    </RelativeLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_recipes_paleo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:text="Paleo"
                    android:textColor="@color/medium_gray"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/rel_recipes_paleo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:background="@android:color/transparent"
                    android:visibility="gone">

                    <RelativeLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/basket_item_style"
                        android:paddingVertical="11dp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingHorizontal="5dp"
                            android:text="Paleo"
                            android:textColor="@color/whites"
                            android:textSize="16sp"
                            android:visibility="visible" />
                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/fm_recipes_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_recipes_title" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".AddCardActivity.AddCardActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:textSize="24sp"
            android:text="Add Card"
            android:textColor="@color/medium_gray_dark"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_AddCard_close"
            android:src="@drawable/ic_icon_close"
            android:layout_marginRight="32dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

    <EditText
        android:layout_marginTop="24dp"
        android:drawablePadding="16dp"
        android:drawableLeft="@drawable/ic_icon_account"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:id="@+id/edt_AddCard_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rel_style"
        android:hint="Cardholder Name"
        android:padding="18dp"
        android:textColor="@color/medium_gray"
        android:textColorHint="@color/medium_gray"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        tools:layout_editor_absoluteX="32dp" />
    <EditText
        android:layout_marginTop="16dp"
        android:drawablePadding="16dp"
        android:drawableLeft="@drawable/ic_icon_card_gray"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:id="@+id/edt_AddCard_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rel_style"
        android:hint="Card Number"
        android:padding="18dp"
        android:textColor="@color/medium_gray"
        android:textColorHint="@color/medium_gray"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/edt_AddCard_name"
        tools:layout_editor_absoluteX="32dp" />

    <EditText
        android:layout_marginTop="16dp"
        android:drawablePadding="16dp"
        android:drawableLeft="@drawable/ic_icon_calendar"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:id="@+id/edt_AddCard_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rel_style"
        android:hint="Expiry Date"
        android:padding="18dp"
        android:textColor="@color/medium_gray"
        android:textColorHint="@color/medium_gray"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/edt_AddCard_number"
        tools:layout_editor_absoluteX="32dp" />

    <EditText
        android:layout_marginTop="16dp"
        android:drawablePadding="16dp"
        android:drawableLeft="@drawable/ic_icon_secure"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:id="@+id/edt_AddCard_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rel_style"
        android:hint="Security Code"
        android:padding="18dp"
        android:textColor="@color/medium_gray"
        android:textColorHint="@color/medium_gray"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/edt_AddCard_date"
        tools:layout_editor_absoluteX="32dp" />

    <Button

        android:layout_marginBottom="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:id="@+id/btn_AddCard_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style"
        android:paddingVertical="15dp"
        android:text="Continue"
        android:textColor="@color/whites"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>
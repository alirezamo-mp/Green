<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_veganItem_rel"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"

    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rel_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:id="@+id/card_rec"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="210dp">

        <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.ThreeBounce"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/green" />


         <ImageView
             android:scaleType="centerCrop"
             android:id="@+id/img_veganItem_image"
             tools:src="@drawable/photo1"
             android:layout_width="match_parent"
             android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

        <TextView
            android:textColor="@color/medium_gray_dark"
            android:id="@+id/txt_veganItem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_rec"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:text="Mixed Berry Melody"
            android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_veganITem_dec"
        android:layout_marginBottom="32dp"
        android:textColor="@color/medium_gray"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="24dp"
        android:text="Berries mixed together a tasty dish."
        android:layout_below="@id/txt_veganItem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    </RelativeLayout>


</RelativeLayout>
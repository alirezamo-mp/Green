<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_CardItem_two"
    android:layout_width="300dp"
    android:layout_height="180dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"

    android:background="@drawable/rel_style_dark">

    <TextView
        android:id="@+id/txt_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/font_b"
        android:text="DEBIT"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/rel_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_top"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="2.5"
            android:text="****"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="2.5"
            android:text="****"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="4dp"
            android:layout_weight="2.5"
            android:text="****"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_cardITem_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_top"
            android:gravity="center"
            android:layout_weight="2.5"

            android:text="2456"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </LinearLayout>


    <TextView

        android:id="@+id/txt_cardItem_nameus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_top"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="Chris Capello"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_cardItem_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_top"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="28dp"
        android:text="06 / 22"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_cartItem_item"
    android:layout_width="match_parent"
    android:layout_height="59dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/rel_style"
   >

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rel_cartItem_delete"
        android:background="@drawable/delete_style"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_cartItem_delete"
            android:paddingHorizontal="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_icon_trash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rel_cartItem_edit"
        android:layout_toLeftOf="@id/rel_cartItem_delete"
        android:background="@color/medium_gray_dark"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_cartITem_edit"
            android:paddingHorizontal="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_icon_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </RelativeLayout>


    <ImageView

        android:id="@+id/img_cardItem_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
         />

    <TextView

        android:id="@+id/txt_cardItem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/img_cardItem_image"
        android:text="Banana"
        android:textColor="@color/medium_gray_dark"
        android:textSize="16sp" />

    <TextView

        android:id="@+id/txt_cartItem_Gh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:text="Â£3.00"
        android:textColor="@color/medium_gray_dark"
        android:textSize="16sp" />

    <TextView

        android:id="@+id/txt_cartItem_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@id/txt_cartItem_Gh"
        android:text="300g"
        android:textColor="@color/medium_gray"
        android:textSize="16sp" />
</RelativeLayout>


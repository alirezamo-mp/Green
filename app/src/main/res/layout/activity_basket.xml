<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".BasketActivity.BasketActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_basket_title"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">

            <ImageView
                android:id="@+id/img_basket_imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="52dp"
                android:src="@drawable/ic_repeat_grid_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:text="Delivery Address"
                android:textColor="@color/medium_gray_dark"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/transparent"

                >

                <ImageView
                    android:id="@+id/img_basket_locationStep"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:src="@drawable/ic_icon_location_green"
                    android:visibility="gone" />

                <RelativeLayout
                    android:visibility="visible"
                    android:id="@+id/rel_basket_location"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:background="@android:color/transparent">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/basket_item_style"
                        android:paddingVertical="11dp">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="28dp"

                            android:src="@drawable/ic_icon_location"
                            android:visibility="visible" />
                    </RelativeLayout>

                </RelativeLayout>


                <ImageView
                    android:id="@+id/img_basket_carStep"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:src="@drawable/ic_icon_car_gray"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/rel_basket_car"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/basket_item_style"
                        android:paddingVertical="11dp">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="26dp"
                            android:layout_marginRight="26dp"
                            android:paddingHorizontal="3dp"

                            android:src="@drawable/ic_icon_car_white"
                             />
                    </RelativeLayout>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/img_basket_cardStep"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:src="@drawable/ic_icon_card_gray"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/rel_basket_card"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/basket_item_style"
                        android:paddingVertical="11dp">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="28dp"
                            android:paddingHorizontal="5dp"

                            android:src="@drawable/ic_icon_card_white"
                            android:visibility="visible" />
                    </RelativeLayout>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/img_basket_moreStep"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:src="@drawable/ic_icon_more_gray"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/rel_basket_more"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:background="@android:color/transparent"
                    android:visibility="gone">

                    <RelativeLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/basket_item_style"
                        android:paddingVertical="11dp">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="28dp"
                            android:paddingHorizontal="5dp"

                            android:src="@drawable/ic_icon_more_white"
                            android:visibility="visible" />
                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/fm_basket_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_basket_title" />

</androidx.constraintlayout.widget.ConstraintLayout>